{
  "id": "/weave-demo",
  "groups": [
    {
      "id": "/weave-demo/database",
      "apps": [
        {
          "id": "/weave-demo/database/user-db",
          "cpus": 0.1,
          "mem": 1024.0,
          "container": {
            "type": "MESOS",
            "docker": {
              "image": "weaveworksdemos/user-db"
            }
          },
          "ipAddress": {
            "networkName": "weave"
          }
        },
        {
          "id": "/weave-demo/database/cart-db",
          "cpus": 0.1,
          "mem": 1024.0,
          "container": {
            "type": "MESOS",
            "docker": {
              "image": "mongo"
            }
          },
          "ipAddress": {
            "networkName": "weave"
          }
        },
        {
          "id": "/weave-demo/database/orders-db",
          "cpus": 0.1,
          "mem": 1024.0,
          "container": {
            "type": "MESOS",
            "docker": {
              "image": "mongo"
            }
          },
          "ipAddress": {
            "networkName": "weave"
          }
        },
        {
          "id": "/weave-demo/database/catalogue-db",
          "cpus": 0.1,
          "mem": 1024.0,
          "container": {
            "type": "MESOS",
            "docker": {
              "image": "weaveworksdemos/catalogue-db"
            }
          },
          "env": {
            "MYSQL_ROOT_PASSWORD": "fake_password",
            "MYSQL_DATABASE": "socksdb"
          },
          "ipAddress": {
            "networkName": "weave"
          }
        }
      ]
    },
    {
      "id": "/weave-demo/service",
      "dependencies": [
        "/weave-demo/database"
      ],
      "apps": [
        {
          "id": "/weave-demo/service/user",
          "cpus": 0.5,
          "mem": 1024.0,
          "container": {
            "type": "MESOS",
            "docker": {
              "image": "weaveworksdemos/user:latest"
            }
          },
          "ipAddress": {
            "networkName": "weave"
          }
        },
        {
          "id": "/weave-demo/service/cart",
          "cpus": 0.5,
          "mem": 1024.0,
          "container": {
            "type": "MESOS",
            "docker": {
              "image": "weaveworksdemos/cart:latest"
            }
          },
          "ipAddress": {
            "networkName": "weave"
          }
        },
        {
          "id": "/weave-demo/service/orders",
          "cpus": 0.5,
          "mem": 1024.0,
          "container": {
            "type": "MESOS",
            "docker": {
              "image": "weaveworksdemos/orders:latest"
            }
          },
          "ipAddress": {
            "networkName": "weave"
          }
        },
        {
          "id": "/weave-demo/service/payment",
          "cpus": 0.1,
          "mem": 128.0,
          "container": {
            "type": "MESOS",
            "docker": {
              "image": "weaveworksdemos/payment:latest",
              "network": "BRIDGE"
            }
          },
          "ipAddress": {
            "networkName": "weave"
          }
        },
        {
          "id": "/weave-demo/service/shipping",
          "cpus": 0.5,
          "mem": 1024.0,
          "container": {
            "type": "MESOS",
            "docker": {
              "image": "weaveworksdemos/shipping:latest"
            }
          },
          "ipAddress": {
            "networkName": "weave"
          }
        },
        {
          "id": "/weave-demo/service/catalogue",
          "cpus": 0.1,
          "mem": 256.0,
          "container": {
            "type": "MESOS",
            "docker": {
              "image": "weaveworksdemos/catalogue:latest"
            }
          },
          "ipAddress": {
            "networkName": "weave"
          }
        }
      ]
    },
    {
      "id": "/weave-demo/ui",
      "dependencies": [
        "/weave-demo/service"
      ],
      "apps": [
        {
          "id": "/weave-demo/ui/front-end",
          "cmd": "PORT=8079 ; npm start -- ",
          "cpus": 0.5,
          "mem": 1024.0,
          "container": {
            "type": "MESOS",
            "docker": {
              "image": "weaveworksdemos/front-end:latest"
            }
          },
          "ipAddress": {
            "networkName": "weave"
          }
        }
      ]
    },
    {
      "id": "/weave-demo/external",
      "dependencies": [
        "/weave-demo/ui"
      ],
      "apps": [
        {
          "id": "/weave-demo/external/edge-router",
          "cmd": "while ! ping -c1 front-end.ui.weave-demo.marathon.weave.local ; do echo .; done ; echo \"worker_processes  5; worker_rlimit_nofile 8192; events { worker_connections  4096; } http { resolver 172.17.0.1 valid=5s; server { listen 80; set \\$endpoint front-end.ui.weave-demo.marathon.weave.local:8079; location / { proxy_pass http://\\$endpoint; }}}\" | tee /etc/nginx/nginx.conf ; cat /etc/nginx/nginx.conf ; nginx -g \"daemon off;\"",
          "cpus": 0.2,
          "mem": 512,
          "disk": 0,
          "instances": 1,
          "constraints": [
            [
              "hostname",
              "UNIQUE"
            ]
          ],
          "container": {
            "docker": {
              "image": "weaveworksdemos/edge-router:latest",
              "portMappings": [
                {
                  "containerPort": 80,
                  "hostPort": 80
                }
              ],
              "privileged": true
            },
            "type": "MESOS",
            "volumes": []
          },
          "portDefinitions": [
            {
              "port": 80,
              "protocol": "tcp",
              "name": "80"
            }
          ]
        }
      ]
    }
  ]
}
